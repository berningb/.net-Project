
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("UploadSong", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="uploadContainer">
        <br />
        <br />
        <label>
            <span>Title :</span>
            <input id="Title" type="text" name="Title" placeholder="some name" required />
        </label>
        <br>
        <br />
        <span>Image (JPG):</span>
        <br />
        <input type="file" name="image" />
        <br />
        <span>Song (MP3):</span>
        <br />
        <input type="file" name="file" />
        <br />
        <input type="submit" name="Submit" id="Submit" value="Upload" />
        <br />
        <br />
    </div>
}
