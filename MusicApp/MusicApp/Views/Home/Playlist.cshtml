
@{
    ViewBag.Title = "Playlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Playlist</h2>


<div class="row">
    @{
        for (int i = 0; i < 20; i++)
        {
            <div class="col-sm-4 keeper">
                <div class="box">
                    <img class="img-circle img" src="~/Images/test.jpg" />
                </div>
                <a href="#">
                    <div class="record">
                        <div class="itag"><i class="fa fa-play play" aria-hidden="true"></i></div>
                        <p class="showTrack">10 tracks</p>
                    </div>
                </a>
            </div>
        }
    }
</div>


